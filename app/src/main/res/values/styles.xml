<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTextInput" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">#2196F3</item>
        <item name="boxBackgroundColor">#F9F9F9</item>
        <item name="boxCornerRadiusTopStart">8dp</item>
        <item name="boxCornerRadiusTopEnd">8dp</item>
        <item name="boxCornerRadiusBottomStart">8dp</item>
        <item name="boxCornerRadiusBottomEnd">8dp</item>
    </style>

    <style name="FormLabel">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#444444</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="FormInput">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">12dp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="LabelText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#666666</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginTop">8dp</item>
    </style>

    <style name="ValueText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#333333</item>
    </style>

    <style name="ShapeAppearanceOverlay.CornerSize50Percent" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="ModernSearchStyle2" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusBottomEnd">16dp</item>
        <item name="boxCornerRadiusBottomStart">16dp</item>
        <item name="boxCornerRadiusTopEnd">16dp</item>
        <item name="boxCornerRadiusTopStart">16dp</item>
        <item name="boxStrokeColor">#E3E3E3</item>
        <item name="hintTextColor">#999999</item>
        <item name="boxBackgroundColor">#F8F9FA</item>
    </style>

    <style name="ModernFilterChip" parent="Widget.Material3.Chip.Filter">
        <item name="chipMinTouchTargetSize">0dp</item>
        <item name="chipStartPadding">12dp</item>
        <item name="chipEndPadding">12dp</item>
        <item name="chipCornerRadius">12dp</item>
    </style>

    <style name="ModernIconButton">
        <item name="android:foreground">?attr/selectableItemBackgroundBorderless</item>
    </style>

    <!-- Chip style cho môn học -->
    <style name="SubjectChip" parent="Widget.Material3.Chip.Assist">
        <item name="chipBackgroundColor">@color/subject_chip_background</item>
        <item name="chipStrokeColor">@color/subject_chip_stroke</item>
        <item name="chipStrokeWidth">1dp</item>
        <item name="chipCornerRadius">16dp</item>
        <item name="android:textColor">@color/subject_chip_text</item>
        <item name="chipMinTouchTargetSize">0dp</item>
        <item name="chipStartPadding">12dp</item>
        <item name="chipEndPadding">12dp</item>
        <item name="chipIconSize">18dp</item>
        <item name="chipMinHeight">32dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>

    <!-- Alternative chip styles for variety -->
    <style name="SubjectChip.Secondary" parent="SubjectChip">
        <item name="chipBackgroundColor">@color/subject_chip_background_secondary</item>
        <item name="chipStrokeColor">@color/subject_chip_stroke_secondary</item>
        <item name="android:textColor">@color/subject_chip_text_secondary</item>
    </style>

    <style name="SubjectChip.Tertiary" parent="SubjectChip">
        <item name="chipBackgroundColor">@color/subject_chip_background_tertiary</item>
        <item name="chipStrokeColor">@color/subject_chip_stroke_tertiary</item>
        <item name="android:textColor">@color/subject_chip_text_tertiary</item>
    </style>
</resources>