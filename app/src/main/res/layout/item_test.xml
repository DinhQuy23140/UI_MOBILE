<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:padding="4dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="2dp"
    app:cardBackgroundColor="@android:color/white"
    app:strokeColor="#E3F2FD"
    app:strokeWidth="1dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header với thông tin sinh viên -->


        <!-- Thông tin đề tài -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="12dp"
            android:padding="12dp"
            android:background="@drawable/bg_info_light">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Đề tài đồ án"
                android:textColor="#2196F3"
                android:textSize="12sp"
                android:textStyle="bold"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/tvTenDeTai"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Xây dựng hệ thống quản lý học tập sử dụng AI"
                android:textColor="#333333"
                android:textSize="14sp"
                android:textStyle="bold"
                android:lineSpacingExtra="2dp" />

        </LinearLayout>

        <!-- Thông tin chi tiết dạng grid -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp">

            <!-- Cột 1: Loại đồ án -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Loại đồ án"
                    android:textColor="#666666"
                    android:textSize="10sp"
                    android:layout_marginBottom="2dp" />

                <TextView
                    android:id="@+id/tvLoaiDoAn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Đồ án tốt nghiệp"
                    android:textColor="#333333"
                    android:textSize="12sp"
                    android:textStyle="bold" />
            </LinearLayout>



        </LinearLayout>



    </LinearLayout>

</com.google.android.material.card.MaterialCardView>