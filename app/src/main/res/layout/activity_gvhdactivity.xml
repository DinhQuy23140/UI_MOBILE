<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient"
    android:orientation="vertical">

    <!-- Header hiện đại -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="@android:color/transparent"
        app:cardCornerRadius="0dp"
        app:cardElevation="0dp"
        app:strokeWidth="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_header_gradient"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="20dp">

            <ImageButton
                android:id="@+id/btnBack"
                style="@style/ModernIconButton"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:background="@drawable/bg_circle_white_alpha"
                android:src="@drawable/ic_back"
                app:tint="#FFFFFF" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:letterSpacing="0.03"
                    android:text="Chi Tiết Giảng Viên"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvGiangVienName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:letterSpacing="0.02"
                    android:text="TS. Nguyễn Văn A"
                    android:textColor="#E3F2FD"
                    android:textSize="14sp" />

            </LinearLayout>

            <ImageButton
                android:id="@+id/btnMore"
                style="@style/ModernIconButton"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:background="@drawable/bg_circle_white_alpha"
                android:src="@drawable/ic_more_vert"
                app:tint="#FFFFFF" />

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <!-- Content Area -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="16dp"
        android:layout_weight="1"
        android:scrollbarSize="0dp"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Avatar Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_info_group"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="20dp">

                    <ImageView
                        android:id="@+id/imgAvatar"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_marginEnd="16dp"
                        android:background="@drawable/bg_circle_accent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/ic_user_placeholder_modern" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tvGiangVienNameMain"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="TS. Nguyễn Văn A"
                            android:textColor="#2196F3"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tvChucVu"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="Giảng viên chính"
                            android:textColor="#666666"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/tvDonVi"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:text="Khoa Công nghệ thông tin"
                            android:textColor="#666666"
                            android:textSize="14sp" />

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Quick Actions -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_info_group"
                    android:orientation="horizontal"
                    android:padding="16dp">

                    <!-- Tin nhắn -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnMessage"
                            style="@style/Widget.Material3.Button.IconButton"
                            android:layout_width="56dp"
                            android:layout_height="56dp"
                            android:text=""
                            app:backgroundTint="#2196F3"
                            app:cornerRadius="12dp"
                            app:elevation="6dp"
                            app:icon="@drawable/ic_chat"
                            app:iconGravity="textStart"
                            app:iconSize="24dp"
                            app:iconTint="@android:color/white" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="Tin nhắn"
                            android:textColor="#666666"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <!-- Gọi điện -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnCall"
                            style="@style/Widget.Material3.Button.IconButton"
                            android:layout_width="56dp"
                            android:layout_height="56dp"
                            android:text=""
                            app:backgroundTint="#4CAF50"
                            app:cornerRadius="12dp"
                            app:elevation="6dp"
                            app:icon="@drawable/ic_call"
                            app:iconGravity="textStart"
                            app:iconSize="24dp"
                            app:iconTint="@android:color/white" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="Gọi điện"
                            android:textColor="#666666"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <!-- Video call -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnVideoCall"
                            style="@style/Widget.Material3.Button.IconButton"
                            android:layout_width="56dp"
                            android:layout_height="56dp"
                            android:text=""
                            app:backgroundTint="#FF9800"
                            app:cornerRadius="12dp"
                            app:elevation="6dp"
                            app:icon="@drawable/ic_camera"
                            app:iconGravity="textStart"
                            app:iconSize="24dp"
                            app:iconTint="@android:color/white" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="Video call"
                            android:textColor="#666666"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <!-- Email -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnEmail"
                            style="@style/Widget.Material3.Button.IconButton"
                            android:layout_width="56dp"
                            android:layout_height="56dp"
                            android:text=""
                            app:backgroundTint="#9C27B0"
                            app:cornerRadius="12dp"
                            app:elevation="6dp"
                            app:icon="@drawable/ic_email"
                            app:iconGravity="textStart"
                            app:iconSize="24dp"
                            app:iconTint="@android:color/white" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="Email"
                            android:textColor="#666666"
                            android:textSize="12sp" />
                    </LinearLayout>
                </LinearLayout>


            </com.google.android.material.card.MaterialCardView>

            <!-- Thông tin chi tiết -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_info_group"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        android:text="Thông Tin Chi Tiết"
                        android:textColor="#2196F3"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <!-- Học vị -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_marginEnd="12dp"
                            android:src="@drawable/ic_do_an_tot_nghiep"
                            app:tint="#2196F3" />

                        <TextView
                            android:id="@+id/tvHocVi"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Thạc sĩ"
                            android:textColor="#333333"
                            android:textSize="14sp" />

                    </LinearLayout>

                    <!-- Chức vụ -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_marginEnd="12dp"
                            android:src="@drawable/ic_person"
                            app:tint="#2196F3" />

                        <TextView
                            android:id="@+id/tvChucVuDetail"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Giảng viên chính"
                            android:textColor="#333333"
                            android:textSize="14sp" />

                    </LinearLayout>

                    <!-- Đơn vị -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_marginEnd="12dp"
                            android:src="@drawable/ic_department"
                            app:tint="#2196F3" />

                        <TextView
                            android:id="@+id/tvDonViDetail"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Khoa Công nghệ thông tin"
                            android:textColor="#333333"
                            android:textSize="14sp" />

                    </LinearLayout>

                    <!-- Email -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_marginEnd="12dp"
                            android:src="@drawable/ic_email"
                            app:tint="#2196F3" />

                        <TextView
                            android:id="@+id/tvEmail"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="nguyenvana@university.edu.vn"
                            android:textColor="#333333"
                            android:textSize="14sp" />

                    </LinearLayout>

                    <!-- Số điện thoại -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_marginEnd="12dp"
                            android:src="@drawable/ic_call"
                            app:tint="#2196F3" />

                        <TextView
                            android:id="@+id/tvPhone"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="0123 456 789"
                            android:textColor="#333333"
                            android:textSize="14sp" />

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Môn học giảng dạy -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_info_group"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        android:text="Môn Học Giảng Dạy"
                        android:textColor="#2196F3"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <com.google.android.material.chip.ChipGroup
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="4dp">

                        <com.google.android.material.chip.Chip
                            style="@style/SubjectChip"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Lập trình Java" />

                        <com.google.android.material.chip.Chip
                            style="@style/SubjectChip"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Cơ sở dữ liệu" />

                        <com.google.android.material.chip.Chip
                            style="@style/SubjectChip"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Phân tích thiết kế hệ thống" />

                        <com.google.android.material.chip.Chip
                            style="@style/SubjectChip"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Trí tuệ nhân tạo" />

                    </com.google.android.material.chip.ChipGroup>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

    </ScrollView>

    <!-- Bottom Action Button -->

</LinearLayout>
