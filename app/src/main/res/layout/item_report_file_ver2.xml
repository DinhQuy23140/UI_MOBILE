<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="8dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="16dp"
    app:cardElevation="4dp"
    app:strokeColor="#E0E0E0"
    app:strokeWidth="1dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="16dp">

        <!-- Icon container -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginEnd="16dp"
            app:cardBackgroundColor="#E3F2FD"
            app:cardCornerRadius="12dp"
            app:cardElevation="0dp">

            <ImageView
                android:id="@+id/imgFileType"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_file"
                app:tint="#2196F3" />
        </com.google.android.material.card.MaterialCardView>

        <!-- File info -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvFileName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="document_proposal.pdf"
                android:textColor="#212121"
                android:textSize="15sp"
                android:textStyle="bold" />

            <!-- Status and time section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <!-- Status badge -->
                <TextView
                    android:id="@+id/tvStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_status_pending"
                    android:gravity="center"
                    android:paddingHorizontal="8dp"
                    android:paddingVertical="2dp"
                    android:text="Đang chờ duyệt"
                    android:textColor="@android:color/white"
                    android:textSize="10sp"
                    android:textStyle="bold" />

                <!-- Upload time -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="14dp"
                        android:layout_height="14dp"
                        android:layout_marginEnd="4dp"
                        android:src="@drawable/ic_clock"
                        app:tint="#9E9E9E" />

                    <TextView
                        android:id="@+id/tvUploadTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2 giờ trước"
                        android:textColor="#9E9E9E"
                        android:textSize="11sp" />
                </LinearLayout>
            </LinearLayout>

            <!-- Version and additional info -->

            <!-- GVHD Feedback (only show when available) -->
            <LinearLayout
                android:id="@+id/layoutFeedback"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:background="@drawable/ic_feedback"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="8dp"
                android:visibility="gone">

                <ImageView
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:layout_marginEnd="6dp"
                    android:src="@drawable/ic_feedback"
                    app:tint="#FF9800" />

                <TextView
                    android:id="@+id/tvFeedback"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="Cần chỉnh sửa phần phương pháp nghiên cứu"
                    android:textColor="#FF9800"
                    android:textSize="10sp"
                    android:textStyle="bold" />
            </LinearLayout>

        </LinearLayout>

        <!-- Action buttons container -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="8dp">

            <!-- Download button -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/btn_download"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:layout_marginBottom="4dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackgroundBorderless"
                app:cardBackgroundColor="#1E88E5"
                app:cardCornerRadius="21dp"
                app:cardElevation="2dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_download"
                    app:tint="@android:color/white" />
            </com.google.android.material.card.MaterialCardView>

            <!-- View detail button (for feedback) -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_view_detail"
                android:layout_width="42dp"
                android:layout_height="24dp"
                android:backgroundTint="#FF9800"
                android:gravity="center"
                android:padding="0dp"
                android:text="⋯"
                android:textColor="@android:color/white"
                android:textSize="12sp"
                android:textStyle="bold"
                android:visibility="gone"
                app:cornerRadius="12dp"
                app:icon="@drawable/ic_info"
                app:iconGravity="textStart"
                app:iconPadding="0dp"
                app:iconSize="14dp" />

        </LinearLayout>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>