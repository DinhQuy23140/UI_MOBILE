<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:padding="4dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="2dp"
    app:cardBackgroundColor="@android:color/white"
    app:strokeColor="#E3F2FD"
    app:strokeWidth="1dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header với thông tin sinh viên -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="12dp">

            <!-- Avatar sinh viên -->
            <LinearLayout
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginEnd="12dp"
                android:gravity="center"
                android:background="@drawable/bg_circle_accent">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_person"
                    app:tint="@color/white" />
            </LinearLayout>

            <!-- Thông tin cơ bản -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvTenSinhVien"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Nguyễn Văn A"
                    android:textColor="#1A237E"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="2dp" />

                <TextView
                    android:id="@+id/tvMaSinhVien"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="MSSV: 20240001"
                    android:textColor="#666666"
                    android:textSize="12sp" />

            </LinearLayout>

            <!-- Năm tốt nghiệp -->
            <TextView
                android:id="@+id/tvNamTotNghiep"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2024"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:textStyle="bold"
                android:background="@drawable/bg_badge_count"
                android:paddingHorizontal="8dp"
                android:paddingVertical="4dp" />

        </LinearLayout>

        <!-- Thông tin đề tài -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="12dp"
            android:padding="12dp"
            android:background="@drawable/bg_info_light">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Đề tài đồ án"
                android:textColor="#2196F3"
                android:textSize="12sp"
                android:textStyle="bold"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/tvTenDeTai"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Xây dựng hệ thống quản lý học tập sử dụng AI"
                android:textColor="#333333"
                android:textSize="14sp"
                android:textStyle="bold"
                android:lineSpacingExtra="2dp" />

        </LinearLayout>

        <!-- Thông tin chi tiết dạng grid -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp">

            <!-- Cột 1: Loại đồ án -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Loại đồ án"
                    android:textColor="#666666"
                    android:textSize="10sp"
                    android:layout_marginBottom="2dp" />

                <TextView
                    android:id="@+id/tvLoaiDoAn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Đồ án tốt nghiệp"
                    android:textColor="#333333"
                    android:textSize="12sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <!-- Cột 2: Điểm số -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Điểm"
                    android:textColor="#666666"
                    android:textSize="10sp"
                    android:layout_marginBottom="2dp" />

                <TextView
                    android:id="@+id/tvDiemSo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="8.5/10"
                    android:textColor="#4CAF50"
                    android:textSize="12sp"
                    android:textStyle="bold" />
            </LinearLayout>

        </LinearLayout>

        <!-- Footer với trạng thái và hành động -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end">

            <!-- Trạng thái -->

            <!-- Khoảng cách -->

            <!-- Nút hành động -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnChiTiet"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:text="Chi tiết"
                android:textSize="11sp"
                app:strokeColor="#2196F3"
                app:strokeWidth="1dp"
                app:cornerRadius="8dp"
                android:textColor="#2196F3"
                android:paddingHorizontal="12dp" />

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>