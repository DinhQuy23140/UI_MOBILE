<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    android:orientation="vertical">

    <!-- TopBar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="#FFFFFF"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingHorizontal="12dp">

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:contentDescription="Back"
            android:src="@drawable/ic_back" />

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Cập nhật thông tin"
            android:textColor="#000000"
            android:textSize="18sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/btnSave"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:contentDescription="Save"
            android:src="@drawable/success_check_win_done_mark_good_svgrepo_com" />
    </LinearLayout>

    <!-- Nội dung -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/background_color"
        android:padding="16dp"
        android:scrollbarSize="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Avatar -->
            <ImageView
                android:id="@+id/imgAvatar"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="9dp"
                android:layout_marginBottom="25dp"
                android:background="@drawable/ic_user_placeholder"
                android:scaleType="centerCrop" />

            <!-- Nhóm 1: Thông tin cá nhân -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:background="@drawable/bg_info_group"
                android:backgroundTint="#FFFFFF"
                android:orientation="vertical"
                android:padding="16dp"
                android:elevation="2dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="8dp"
                    android:text="Thông tin cá nhân"
                    android:textColor="#000"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <!-- Mã sinh viên -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Mã sinh viên"
                    android:textColor="#555"
                    android:textSize="14sp"
                    android:paddingTop="8dp"/>

                <EditText
                    android:id="@+id/tv_sv_msv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_info_group"
                    android:hint="Nhập mã sinh viên" />

                <!-- Họ và tên -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Họ và tên"
                    android:textColor="#555"
                    android:textSize="14sp"
                    android:paddingTop="8dp"/>

                <EditText
                    android:id="@+id/tv_sv_fullname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_info_group"
                    android:drawableEnd="@drawable/ic_user"
                    android:hint="Nhập họ và tên" />

                <!-- Ngày sinh -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Ngày sinh"
                    android:textColor="#555"
                    android:textSize="14sp"
                    android:paddingTop="8dp"/>

                <EditText
                    android:id="@+id/tv_sv_dob"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_info_group"
                    android:drawableEnd="@drawable/ic_date_range"
                    android:hint="dd/MM/yyyy"
                    android:inputType="date" />

                <!-- Số điện thoại -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Số điện thoại"
                    android:textColor="#555"
                    android:textSize="14sp"
                    android:paddingTop="8dp"/>

                <EditText
                    android:id="@+id/tv_sv_phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_info_group"
                    android:drawableEnd="@drawable/ic_call"
                    android:hint="Nhập số điện thoại"
                    android:inputType="phone" />

                <!-- Email -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Email"
                    android:textColor="#555"
                    android:textSize="14sp"
                    android:paddingTop="8dp"/>

                <EditText
                    android:id="@+id/tv_sv_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_info_group"
                    android:drawableEnd="@drawable/ic_email"
                    android:hint="Nhập email"
                    android:inputType="textEmailAddress" />

                <!-- Địa chỉ -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Địa chỉ thường trú"
                    android:textColor="#555"
                    android:textSize="14sp"
                    android:paddingTop="8dp"/>

                <EditText
                    android:id="@+id/tv_sv_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_info_group"
                    android:drawableEnd="@drawable/ic_localtion"
                    android:hint="Nhập địa chỉ"
                    android:inputType="textPostalAddress" />
            </LinearLayout>

            <!-- Nhóm 2: Thông tin học tập -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:background="@drawable/bg_info_group"
                android:elevation="2dp"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="8dp"
                    android:text="Thông tin học tập"
                    android:textColor="#000"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <!-- Tương tự, thêm label cho từng field -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Lớp"
                    android:textColor="#555"
                    android:textSize="14sp"
                    android:paddingTop="8dp"/>

                <EditText
                    android:id="@+id/tv_sv_class"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_info_group"
                    android:hint="Nhập lớp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Ngành học"
                    android:textColor="#555"
                    android:textSize="14sp"
                    android:paddingTop="8dp"/>

                <EditText
                    android:id="@+id/tv_sv_major"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_info_group"
                    android:hint="Nhập ngành học" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Khoa"
                    android:textColor="#555"
                    android:textSize="14sp"
                    android:paddingTop="8dp"/>

                <EditText
                    android:id="@+id/tv_sv_department"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_info_group"
                    android:hint="Nhập khoa" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Khóa học"
                    android:textColor="#555"
                    android:textSize="14sp"
                    android:paddingTop="8dp"/>

                <EditText
                    android:id="@+id/tv_sv_course"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_info_group"
                    android:hint="Nhập khóa học" />
            </LinearLayout>

            <!-- Logout -->
            <Button
                android:id="@+id/btnLogout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:backgroundTint="#D32F2F"
                android:text="Đăng xuất"
                android:textColor="#FFFFFF" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
