<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:padding="4dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="2dp"
    app:cardBackgroundColor="@android:color/white"
    app:strokeColor="#E3F2FD"
    app:strokeWidth="1dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical">

        <!-- Avatar với border -->
        <LinearLayout
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginEnd="16dp"
            android:gravity="center"
            android:padding="3dp">

            <ImageView
                android:id="@+id/imgAvatar"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/ic_user_placeholder"
                android:scaleType="centerCrop"
                android:contentDescription="Avatar giảng viên"
                app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.CornerSize50Percent" />

        </LinearLayout>

        <!-- Thông tin giảng viên -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <!-- Tên giảng viên -->
            <TextView
                android:id="@+id/tvGiangVienName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TS. Nguyễn Văn A"
                android:textColor="#1A237E"
                android:textSize="17sp"
                android:textStyle="bold"
                android:letterSpacing="0.02"
                android:layout_marginBottom="4dp" />

            <!-- Học vị với badge -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="6dp">

                <TextView
                    android:id="@+id/tvHocVi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Thạc sĩ"
                    android:textColor="#FFFFFF"
                    android:textSize="11sp"
                    android:textStyle="bold"
                    android:background="@drawable/bg_badge_blue"
                    android:paddingHorizontal="8dp"
                    android:paddingVertical="2dp"
                    android:gravity="center" />

            </LinearLayout>

            <!-- Đơn vi công tác với icon -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="4dp">

                <ImageView
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:src="@drawable/ic_department"
                    android:tint="#666666"
                    android:layout_marginEnd="4dp" />

                <TextView
                    android:id="@+id/tvDonVi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Khoa Công nghệ thông tin"
                    android:textColor="#666666"
                    android:textSize="13sp" />
            </LinearLayout>

            <!-- Số lượng hướng dẫn -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:src="@drawable/ic_student"
                    android:tint="#666666"
                    android:layout_marginEnd="4dp" />

                <TextView
                    android:id="@+id/tvSoLuongHD"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Đang hướng dẫn: 5 SV"
                    android:textColor="#666666"
                    android:textSize="12sp" />
            </LinearLayout>

        </LinearLayout>

        <!-- Nút chức năng - Sửa lại để icon nằm giữa -->
        <ImageButton
            android:id="@+id/btnDetail"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/bg_circle_button"
            android:src="@drawable/ic_visibility"
            android:contentDescription="Xem chi tiết"
            android:scaleType="center"
            android:padding="8dp"/>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>